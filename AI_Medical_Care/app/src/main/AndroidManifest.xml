<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.android.aimedicalcare">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:allowClearUserData="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.AIMedicalCare">
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />
        <activity
            android:name=".AddOldMedicalHistoryActivity"
            android:theme="@style/Theme.AIMedicalCare.NoActionBar" />
        <activity
            android:name=".GenerateQRCodeActivity"
            android:theme="@style/Theme.AIMedicalCare.NoActionBar" />
        <activity
            android:name=".MedicalHistoryRecordActivity"
            android:theme="@style/Theme.AIMedicalCare.NoActionBar" />
        <activity
            android:name=".MedicalHistoryActivity"
            android:theme="@style/Theme.AIMedicalCare.NoActionBar" />
        <activity
            android:name=".DiagnoseResultActivity"
            android:theme="@style/Theme.AIMedicalCare.NoActionBar" />
        <activity
            android:name=".TextDiagnoseActivity"
            android:label="@string/diagnose_with_text"
            android:theme="@style/Theme.AIMedicalCare.NoActionBar" />
        <activity
            android:name=".DiagnoseActivity"
            android:label="@string/diagnose"
            android:theme="@style/Theme.AIMedicalCare.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.AIMedicalCare.NoActionBar" />
        <activity
            android:name=".RegisterDoctorActivity"
            android:theme="@style/Theme.AIMedicalCare.NoActionBar" />
        <activity
            android:name=".RegisterPatientActivity"
            android:theme="@style/Theme.AIMedicalCare.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AIMedicalCare.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AIMedicalCare.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AIMedicalCare.NoActionBar" />
    </application>

</manifest>