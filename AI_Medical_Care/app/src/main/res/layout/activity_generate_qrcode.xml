<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AIMedicalCare.NoActionBar"
    tools:context=".GenerateQRCodeActivity">

    <Button
        android:id="@+id/cancel_generate"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/ripple_white"
        android:drawableStart="@drawable/icon_cancel"
        android:drawableLeft="@drawable/icon_cancel"
        android:drawablePadding="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textAllCaps="false"
        android:textColor="@color/_364F6B"
        android:textSize="20sp"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/qr_code_img"
        android:layout_width="323dp"
        android:layout_height="321dp"
        android:contentDescription="@string/generate_qr_code"
        app:layout_constraintBottom_toTopOf="@+id/cancel_generate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/qr_code" />
</androidx.constraintlayout.widget.ConstraintLayout>